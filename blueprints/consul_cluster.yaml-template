    interfaces:
      cloudify.interfaces.lifecycle:
        create:
          inputs:
            args:
              ip_addresses:
                - { get_attribute: [ floatingip_cnsl00, floating_ip_address ] }
                - { get_attribute: [ floatingip_cnsl01, floating_ip_address ] }
